<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="product-gallery">
    <div class="slider-for">
        <?php foreach ($this->getGalleryImages() as $_image): ?>
            <div class="item">
                <img src="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile()); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
            </div>
        <?php endforeach; ?>
    </div>
    <div class="product-other-images">
        <img class="slick-prev slick-arrow" src="<?php echo $this->getSkinUrl('images/xs-left.svg');?>">
        <div class="slider-nav">
            <?php foreach ($this->getGalleryImages() as $_image): ?>
                <div class="item">
                    <img src="<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail', $_image->getFile())->resize(70); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
                </div>
            <?php endforeach; ?>
        </div>
        <img class="slick-next slick-arrow" src="<?php echo $this->getSkinUrl('images/xs-right.svg');?>">
    </div>
</div>
<?php endif; ?>
